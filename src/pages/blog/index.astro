---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog", ({ data }) => !data.draft))
  .sort((a, b) => (a.data.date < b.data.date ? 1 : -1));
---
<BaseLayout title="Blog â€” Josh Elliott">
  <h1 class="text-2xl font-semibold mb-6">Blog</h1>
  <ul class="space-y-4">
    {posts.map(({ slug, data }) => (
      <li class="border border-neutral-800 rounded-xl p-4 hover:border-neutral-700 transition">
        <a href={`/blog/${slug}/`} class="text-lg font-medium">{data.title}</a>
        {data.summary && <p class="text-sm text-neutral-400 mt-1">{data.summary}</p>}
        <p class="text-xs text-neutral-500 mt-1">{data.date}</p>
      </li>
    ))}
  </ul>
</BaseLayout>
